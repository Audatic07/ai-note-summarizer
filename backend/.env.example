# Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Application Settings
APP_NAME="AI Note Summarizer"
DEBUG=true
API_VERSION=v1

# Database Configuration
# SQLite for development (file will be created automatically)
DATABASE_URL=sqlite:///./notes.db
# PostgreSQL for production (uncomment and configure):
# DATABASE_URL=postgresql://user:password@localhost:5432/notes_db

# AI Configuration
# Choose your AI provider: 'groq' (recommended, free), 'openai', or 'mock'
AI_PROVIDER=groq

# Groq API (FREE - recommended)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key-here

# OpenAI API (paid alternative)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Model to use (for OpenAI)
DEFAULT_MODEL=gpt-3.5-turbo

# Text Processing Limits
MAX_TEXT_LENGTH=50000
MAX_PDF_SIZE_MB=10
CHUNK_SIZE=3000

# CORS Configuration (comma-separated origins)
# For development, allow all. For production, specify your mobile app's origin
CORS_ORIGINS=*

# Summary Configuration
DEFAULT_SUMMARY_LENGTH=medium
